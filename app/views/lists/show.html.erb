<h1><%= @list.name %></h1>

    <div class="card">
    </div>

<div class="container">
  <div class="card-trip">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
        <img src=<%=bookmark.movie.poster_url%> class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-title"><%= bookmark.movie.title%></p>
          <p class="card-text"><%= bookmark.movie.overview%></p>
          <p class="card-text"><%= bookmark.movie.rating%></p>
          <p class="card-text"><%= bookmark.comment%></p>
          <%= link_to "Delete ", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }%>
        </div>
      </div>
    <% end %>
  </div>
<%= link_to "Back to task list", lists_path, class: 'btn btn-ghost' %>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-ghost' %>
</div>
